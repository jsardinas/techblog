<div class="row">
    <div class="card custom-card"  id="update-post" postid="{{post.id}}">
        <div class="custom-card-header">
            <h2>Edit Post</h2>
        </div>
        <div class="custom-card-body">
            <form class="form update-post-form">
                <div class="form-group">
                    <label for="update-title">Title</label>
                    <input class="form-input" type="text" id="update-title" value="{{post.title}}"/>
                </div>
                <div class="form-group">
                    <label for="update-content">Content</label>
                    <textarea class="custom-form-control form-control" id="update-content">{{post.content}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn custom-btn-primary" type="submit" id="update-btn">Update Post</button>
                </div>
                <div class="form-group">
                    <button class="btn custom-btn-primary" type="submit" id="delete-btn">Delete Post</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="../js/update.js"></script>