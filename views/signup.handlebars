<div class="row">
    <div class="card custom-card">
        <div class="custom-card-header display-flex justify-space-between">
            <h2>Sign up</h2>
        </div>
        <div class="custom-card-body">
            <form class="form signup-form">
                <div class="form-group">
                    <label for="name-signup">Username</label>
                    <input class="form-input" type="text" id="name-signup" />
                </div>
                <div class="form-group">
                    <label for="password-signup">Password</label>
                    <input class="form-input" type="password" id="password-signup" />
                </div>
                <div class="form-group">
                    <button class="btn custom-btn-primary" type="submit">Signup!</button>
                </div>
                </form>
            <div class="signup-link">
                <a href="/login">Login instead</a>
            </div>
        </div>
    </div>
</div>

<script src="./js/signup.js"></script>