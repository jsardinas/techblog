<div class="row">
    <div class="card custom-card">
        <div class="custom-card-header display-flex justify-space-between">
            <h2>Login</h2>
        </div>
        <div class="custom-card-body">
            <form class="form login-form">
                <div class="form-group">
                    <label for="email-login">Username</label>
                    <input class="form-input" type="text" id="username-login" />
                </div>
                <div class="form-group">
                    <label for="password-login">Password</label>
                    <input class="form-input" type="password" id="password-login" />
                </div>
                <div class="form-group">
                    <button class="btn custom-btn-primary" type="submit">Login!</button>
                </div>
            </form>
            <div class="signup-link">
                <a href="/signup">Sign up instead</a>
            </div>
        </div>
    </div>
</div>

<script src="./js/login.js"></script>