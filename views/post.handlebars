<div class="row">
    <div class="card custom-card" id="post" postid="{{id}}">
        <div class="custom-card-header display-flex justify-space-between">
            <h2>
                {{title}}
            </h2>
            <span>Posted by {{user.name}} on {{format_date date_created}}</span>
        </div>
        <div class="custom-card-body">
            <p>
                {{content}}
            </p>
        </div>
    </div>  
</div>

{{#each comments as |comment| }}
    <div class="row">
    <div class="custom-card card">
        <div class="custom-card-header display-flex justify-space-between">
            <h2>
                
            </h2>
        </div>
        <div class="custom-card-body">
            <p>{{comment.content}}</p>
            <p>&#8211; {{comment.user.name}}, {{format_date comment.date_created}}</p>
        </div>
    </div>  
</div>
{{/each}}

{{#if logged_in}}
<div class="row">
    <div class="custom-card card">
        <div class="custom-card-header display-flex justify-space-between">
            <h2>
                
            </h2>
        </div>
        <div class="custom-card-body">
            <form class="form comment-form">
                <div class="form-group">
                    <label for="Comment">comment</label>
                    <textarea class="custom-form-control fixed-form-control form-control" id="comment"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn custom-btn-primary" type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>  
</div>
<script src="/js/comment.js"></script>
{{/if}}

